    "version": "0.2.0",
    "configurations": [
        {
            "name": "Distributed Torch",
            "type": "python",
            "request": "launch",
            // we launch a module...
            "module":"torch.distributed.launch",
            // with args...
            "args":["--use_env","--nproc_per_node=3","--master_addr=127.0.0.1",
            "--master_port=29500","train.py", "Sample.py"],
            "console": "integratedTerminal",
            "justMyCode": false
        },

        {
            "name": "train.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": ["CVPRMedSAM.py"]

        }
    ]
}